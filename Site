  <script>
    // G√®re l‚Äôouverture / fermeture de chaque question principale
    const questions = document.querySelectorAll('.question');
    questions.forEach(q => {
      q.addEventListener('click', () => {
        q.classList.toggle('open');
        q.nextElementSibling.classList.toggle('show');
      });
    });

    // G√®re les boutons Oui / Non
    const boutons = document.querySelectorAll('.choix button');
    boutons.forEach(btn => {
      btn.addEventListener('click', () => {
        const parent = btn.closest('.reponse');
        const targetId = btn.dataset.target;

        // Masque toutes les sous-sections de cette r√©ponse
        parent.querySelectorAll('.sous-section').forEach(sec => sec.style.display = 'none');

        // Affiche uniquement la sous-section cibl√©e
        const cible = document.getElementById(targetId);
        if (cible) {
          cible.style.display = 'block';
        }
      });
    });
  </script>

